<% if Favorite.find_by(account_id: current_account.id, favoritable_type: "Post", favoritable_id: post.id) %>
  <%= link_to post_favorite_path(post.id, post.favorites.find_by(account_id: current_account.id).id), method: :delete, id: "fav_link-#{post.id}", class: "favorite-link delete-#{post.id}", remote: true do %>
    <i class="material-icons">star</i>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post.id), method: :post, id: "fav_link-#{post.id}", class: "favorite-link post-#{post.id}", remote: true do %>
    <i class="material-icons">star_border</i>
  <% end %>
<% end %>
<span id="num_of_fav-<%= post.id %>">
  <%= post.favorites.size %>
</span>