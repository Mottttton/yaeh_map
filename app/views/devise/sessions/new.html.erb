<div class="form-signin w-100 mx-auto">
  <h2 class="h3 mb-3 fw-normal"><%= t('.sign_in') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-floating">
      <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
      <%= f.label :email %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", placeholder: :password, autocomplete: "current-password" %>
      <%= f.label :password %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit t('.sign_in'), id: "create-session", class: "btn btn-primary w-100 py-2" %>
    </div>
  <% end %>
  <div class="my-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
