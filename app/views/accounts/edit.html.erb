<h1><%= t('.title') %></h1>
<%= form_with(model: @account, local: true) do |f| %>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :portrait %>
    <%= f.file_field :portrait %>
  </div>

  <div class="form-group">
    <%= f.label :region %>
    <%= f.select :region, Post.regions.keys.map { |k| [k, k] }, {include_blank: true} %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_area :self_introduction %>
  </div>

  <div class="actions">
    <%= f.submit id: 'update-profile', class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to 'アカウント名、メールアドレス、パスワードの変更', edit_account_registration_path, method: :get, id: "edit-account", class: 'btn btn-primary' %>